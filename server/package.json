{
  "name": "noteearly-server",
  "version": "1.0.0",
  "description": "NoteEarly platform backend server",
  "main": "dist/server.js",
  "_moduleAliases": {
    "@": "./dist",
    "@shared": "./dist/shared",
    "@modules": "./dist/modules",
    "@config": "./dist/config",
    "@middleware": "./dist/middleware",
    "@utils": "./dist/utils"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "vitest run --exclude src/modules/auth/__tests__/auth-endpoints.test.ts",
    "test:auth-endpoints": "vitest run src/modules/auth/__tests__/auth-endpoints.test.ts",
    "test:reading-service": "vitest run src/modules/reading-modules/__tests__/reading.service.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docs": "tsx ./scripts/generate-swagger-file.ts",
    "sync:stripe": "tsx ./scripts/sync-stripe-plans.ts"
  },
  "keywords": [
    "education",
    "reading",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "postgres": "^3.4.5",
    "stripe": "^18.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "axios": "^1.9.0",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "openapi-typescript": "^7.6.1",
    "pg": "^8.14.1",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  }
}
